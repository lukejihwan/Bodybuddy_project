<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member">
	<resultMap type="Member" id="memberMap">
		<id 		column="member_idx" 	property="member_idx"/>
		<result column="nickname" 		property="nickname"/>
		<result column="email" 				property="email"/>
		<result column="phone" 			property="phone"/>
		<result column="regdate" 			property="regdate"/>
		<result column="point" 				property="point"/>
		<collection column="member_idx" property="address" javaType="com.edu.bodybuddy.domain.member.Address" select="Address.selectByMember"/>
	</resultMap>
	
	<!-- 로그인 체크용 id pass 일치확인 -->
	<select id="selectByIdPass" parameterType="Member" resultMap="memberMap">
		select * from member where id=#{id} and pass=#{pass}
	</select>
	
	<!-- Id 중복검사 -->
	<select id="selectById" parameterType="Member" resultType="Member">
		select * from member where id=#{id}
	</select>
	
	<!-- Email 중복검사 -->
	<select id="selectByEmail" parameterType="Member" resultType="Member">
		select * from member where email=#{email}
	</select>
	
	<!-- 관리자용 전체회원 조회 -->
	<select id="selectAll" resultType="Member">
		select * from member order by member_idx desc
	</select>
	
	<!-- 회원가입 -->
	<insert id="insert" parameterType="Member">
		insert into member(name, id, pass, email, phone)
		 values(#{name}, #{id}, #{pass}, #{email}, #{phone})
		 <selectKey keyColumn="member_idx" keyProperty="member_idx" order="AFTER" resultType="int">
		 	select last_insert_id() as member_idx
		 </selectKey>
	</insert>
	
	<!-- 회원 정보 수정 -->
	<update id="update" parameterType="Member">
		update member set email = #{email}, phone =#{phone} where member_idx = #{member_idx}
	</update>
	
	<!-- 회원 비밀번호 수정 -->
	<update id="updatePass" parameterType="Member">
		update member set pass = #{pass} where member_idx = #{member_idx}
	</update>
	
	<!-- 회원 탈퇴, 관리자 직권삭제 -->
	<delete id="delete" parameterType="int">
		delete from member where member_idx = #{member_idx}
	</delete>
	
</mapper>